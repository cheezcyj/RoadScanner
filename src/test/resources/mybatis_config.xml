<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
  <!-- 개발 환경 설정 -->
  <environments default="development">
    <environment id="development">
      <transactionManager type="JDBC"/>
      <dataSource type="POOLED">
        <!-- 데이터베이스 연결 정보를 입력해주세요 -->
        <property name="driver" value="oracle.jdbc.driver.OracleDriver"/>
        <property name="url" value="jdbc:oracle:thin:@192.168.0.123:1521:XE"/>
        <property name="username" value="F1"/>
        <property name="password" value="4444"/>
      </dataSource>
    </environment>
    
    <!-- 테스트 환경 설정 -->
    <environment id="test">
      <transactionManager type="JDBC"/>
      <dataSource type="POOLED">
        <!-- 테스트용 데이터베이스 연결 정보를 입력해주세요 -->
        <property name="driver" value="oracle.jdbc.driver.OracleDriver"/>
        <property name="url" value="jdbc:oracle:thin:@test_server:1521:test_XE"/>
        <property name="username" value="F1"/>
        <property name="password" value="4444"/>
      </dataSource>
    </environment>
  </environments>

  <mappers>
    <!-- 여기에 SQL 매퍼 파일의 경로를 추가해주세요 -->
    <!-- 개발 환경에서는 qna-mapper.xml을 사용, 테스트 환경에서는 test-mapper.xml을 사용하도록 설정 -->
    <mapper resource="com/roadscanner/board/dao/qna_mapper.xml"/>
  </mappers>
</configuration>
